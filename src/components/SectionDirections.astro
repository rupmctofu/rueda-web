---
import { directionCards } from "@/lib/direction-cards";
import CardDirection from "./CardDirection.astro";
---

<section
  id="direcciones"
  class="flex flex-col bg-[url('directions-bg.jpg')] w-full"
>
  <picture class="h-24 mb-32 bg-[url('/label.jpg')]"></picture>

  <header class="flex flex-col items-center gap-24">
    <h2 class="mb-10 text-6xl font-title text-center text-orange-950">
      LAS CUATRO DIRECCIONES
    </h2>
  </header>

  <main class="flex flex-col items-center w-full">
    <ul class="flex flex-wrap justify-center items-stretch gap-2">
      {
        directionCards.map((card) => (
          <li class="flex aspect-[3/5] hover:scale-110 odd:hover:-rotate-1 even:hover:rotate-1 hover:shadow-[0_35px_60px_15px_rgba(0,0,0,0.7)] transition ease-in">
            <CardDirection {...card} />
          </li>
        ))
      }
    </ul>
  </main>

  <picture class="h-24 mt-32 bg-[url('/label.jpg')] rotate-180"></picture>
</section>
