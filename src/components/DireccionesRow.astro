---
import CardEste from "@/components/CardEste.astro";
import CardNorte from "@/components/CardNorte.astro";
import CardOeste from "@/components/CardOeste.astro";
import CardSur from "@/components/CardSur.astro";
---

<section class="flex flex-col bg-[url('direcciones-bg.svg')] w-full">
  <picture class="m-[-1px] mb-32">
    <img src="/cinta.png" class="w-full" alt="Cinta" />
  </picture>

  <header class="flex flex-col items-center gap-24">
    <h2 class="mb-10 text-6xl font-title text-orange-950">
      LAS CUATRO DIRECCIONES
    </h2>
  </header>

  <main class="flex flex-col items-center w-full">
    <ul class="flex items-stretch gap-2">
      <li class="flex aspect-[3/5] hover:scale-110 hover:-rotate-1 hover:shadow-[0_35px_60px_-15px_rgba(0,0,0,0.7)] transition ease-in"><CardSur /></li>
      <li class="flex aspect-[3/5] hover:scale-110 hover:rotate-1 hover:shadow-[0_35px_60px_-15px_rgba(0,0,0,0.7)] transition ease-in"><CardOeste /></li>
      <li class="flex aspect-[3/5] hover:scale-110 hover:-rotate-1 hover:shadow-[0_35px_60px_-15px_rgba(0,0,0,0.7)] transition ease-in"><CardNorte /></li>
      <li class="flex aspect-[3/5] hover:scale-110 hover:rotate-1 hover:shadow-[0_35px_60px_-15px_rgba(0,0,0,0.7)] transition ease-in"><CardEste /></li>
    </ul>
  </main>

  <picture class="m-[-1px] mt-32">
    <img src="/cinta.png" class="w-full" alt="Cinta" />
  </picture>
</section>
